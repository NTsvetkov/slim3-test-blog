{% if flash.getMessage('info') %}
    <div class="alert alert-info">
        {% for message in flash.getMessage('info') %}
        {{ message }}
        {% endfor %}
    </div>
{% endif %}
{% if flash.getMessage('error') %}
    <div class="alert alert-danger">
        {% for message in flash.getMessage('error') %}
            {{ message }}
        {% endfor %}
    </div>
{% endif %}